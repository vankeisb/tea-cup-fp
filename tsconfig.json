{
    "include": [
        "src"
    ],
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "esModuleInterop": false,
        "moduleResolution": "bundler"
    },
    "compileOnSave": true,
    "exclude": [
        "node_modules",
        "dist"
    ]
}